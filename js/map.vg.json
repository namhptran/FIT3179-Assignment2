{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Deaths by Organised and State-based Violence (1989-2021)",
  "vconcat": [
    {
      "width": 1500,
      "height": 750,
      "projection": {
        "type": "equalEarth"
      },
      "layer": [
        {
          "name": "World Map Base",
          "data": {
            "url": "./js/ne_50m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_50m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgrey",
            "stroke": "darkgrey"
          }
        },
        {
          "name": "World Map Ocean",
          "data": {
            "url": "./js/ne_50m_ocean.json",
            "format": {
              "type": "topojson",
              "feature": "ne_50m_ocean"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "skyblue"
          }
        },
        {
          "name": "World Map Graticule",
          "data": {
            "url": "./js/ne_50m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_50m_graticules_30"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "darkgray"
          }
        },
        {
          "name": "Symbol Map",
          "data": {
            "url": "./data/GEDEvent_v22_1.csv",
            "format": {
              "type": "csv"
            }
          },
          "params": [{
            "name": "region_param",
            "select": {
              "type": "point",
              "fields": [
                "region"
              ]
            },
            "bind": "legend"
          }
          ],
          "transform": [
            {
              "filter": {
                "param": "event_filter"
              }
            },
            {
              "filter": "datum.best >= 100"
            },
            {
              "filter": "datum.best < 5000"
            },
            {
              "lookup": "country_id",
              "from": {
                "data": {
                  "url": "./data/country_id.csv"
                },
                "key": "country_id",
                "fields": ["country_name"]
              }
            }
          ],
          "mark": {
            "type": "circle"
          },
          "encoding": {
            "longitude": {
              "field": "longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "latitude",
              "type": "quantitative"
            },
            "size": {
              "field": "best",
              "type": "quantitative",
              "legend": {
                "title": "Deaths",
                "orient": "top-left"
              },
              "scale": {
                "type": "linear"
              }
            },
            "color": {
              "field": "region",
              "type": "nominal",
              "title": "Region",
              "legend": {
                "type": "symbol",
                "symbolOpacity": 1,
                "orient": "bottom-right"
              },
              "scale": {
                "domain": ["Africa", "Americas", "Asia", "Europe", "Middle East"],
                "scheme": "dark2"
              }
            },
            "opacity": {
              "condition": {
                "param": "region_param",
                "value": 0.3
              },
              "value": 0.01
            },
            "tooltip": [
              {
                "type": "nominal",
                "field": "country_name",
                "title": "Country"
              },
              {
                "type": "quantitative",
                "field": "best",
                "title": "Total deaths"
              },
              {
                "type": "temporal",
                "field": "date_start",
                "title": "Start date"
              },
              {
                "type": "temporal",
                "field": "date_end",
                "title": "End date"
              }
            ]
          }
        },
        {
          "name": "Symbol Map Over 5000",
          "data": {
            "url": "./data/GEDEvent_v22_1.csv",
            "format": {
              "type": "csv"
            }
          },
          "transform": [
            {
              "filter": {
                "param": "event_filter"
              }
            },
            {
              "filter": "datum.best >= 5000"
            },
            {
              "lookup": "country_id",
              "from": {
                "data": {
                  "url": "./data/country_id.csv"
                },
                "key": "country_id",
                "fields": ["country_name"]
              }
            }
          ],
          "mark": {
            "type": "circle",
            "fill": "black"
          },
          "encoding": {
            "longitude": {
              "field": "longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "latitude",
              "type": "quantitative"
            },
            "tooltip": [
              {
                "type": "nominal",
                "field": "country_name",
                "title": "Country"
              },
              {
                "type": "quantitative",
                "field": "best",
                "title": "Total deaths"
              },
              {
                "type": "temporal",
                "field": "date_start",
                "title": "Start date"
              },
              {
                "type": "temporal",
                "field": "date_end",
                "title": "End date"
              }
            ]
          }
        }
      ]
    },
    {
      "data": {
        "url": "data/GEDEvent_v22_1.csv"
      },
      "width": 1500,
      "height": 200,
      "title": "Deaths by Organised and State-based Violence (1989-2021)",
      "transform": [
        {
          "filter": "datum.best > 100"
        }
      ],
      "layer": [
        {
          "params": [
            {
              "name": "event_filter",
              "select": {
                "type": "interval",
                "clear": "mouseup"
              }
            }
          ],
          "mark": {
            "type": "point",
            "filled": true
          },
          "encoding": {
            "color": {
              "field": "region",
              "type": "nominal"
            },
            "x": {
              "field": "date_start",
              "type": "temporal",
              "title": "Start/End Date"
            },
            "y": {
              "field": "best",
              "type": "quantitative",
              "scale": {
                "type": "log"
              },
              "title": "Estimated deaths"
            },
            "opacity": {
              "condition": {
                "param": "region_param",
                "value": 1
              },
              "value": 0.1
            }
          }
        },
        {
          "mark": {
            "type": "point",
            "filled": true
          },
          "encoding": {
            "color": {
              "field": "region",
              "type": "nominal"
            },
            "x": {
              "field": "date_end",
              "type": "temporal"
            },
            "y": {
              "field": "best",
              "type": "quantitative",
              "scale": {
                "type": "log"
              }
            },
            "opacity": {
              "condition": {
                "param": "region_param",
                "value": 1
              },
              "value": 0.1
            }
          }
        },
        {
          "mark": {
            "type": "rule"
          },
          "encoding": {
            "color": {
              "field": "region",
              "type": "nominal",
              "scale": {
                "domain": ["Africa", "Americas", "Asia", "Europe", "Middle East"],
                "scheme": "dark2"
              },
              "legend": null
            },
            "x": {
              "field": "date_start",
              "type": "temporal"
            },
            "x2": {
              "field": "date_end"
            },
            "y": {
              "field": "best",
              "type": "quantitative",
              "scale": {
                "type": "log"
              }
            },
            "y2": {
              "field": "best"
            },
            "opacity": {
              "condition": {
                "param": "region_param",
                "value": 1
              },
              "value": 0.1
            }
          }
        }
      ]
    },
    {
      "hconcat": [
        {
          "data": {
            "url": "data/GEDEvent_v22_1.csv"
          },
          "width": 710,
          "height": 200,
          "transform": [
            {
              "filter": "datum.best > 0"
            },
            {
              "filter": {
                "param": "event_filter"
              }
            },
            {
              "aggregate": [
                {
                  "op": "sum",
                  "field": "deaths_a",
                  "as": "deaths_a_total"
                },
                {
                  "op": "sum",
                  "field": "deaths_b",
                  "as": "deaths_b_total"
                },
                {
                  "op": "sum",
                  "field": "deaths_civilians",
                  "as": "Civilians"
                },
                {
                  "op": "sum",
                  "field": "best",
                  "as": "deaths_total"
                }
              ],
              "groupby": ["country_id"]
            },
            {
              "calculate": "datum.deaths_a_total + datum.deaths_b_total",
              "as": "Non-civilians"
            },
            {
              "window": [{"op": "rank", "as": "ranking"}],
              "sort": [
                {
                  "field": "deaths_total",
                  "order": "descending"
                }
              ]
            },
            {
              "filter": "datum.ranking <= 10"
            },
            {
              "lookup": "country_id",
              "from": {
                "data": {
                  "url": "./data/country_id.csv",
                  "format": {
                    "type": "tsv"
                  }
                },
                "key": "country_id",
                "fields": ["country_name"]
              }
            },
            {
              "fold": [
                "Non-civilians",
                "Civilians"
              ],
              "as": ["group", "deaths"]
            }
          ],
          "mark": {
            "type": "bar"
          },
          "encoding": {
            "x": {
              "field": "country_name",
              "type": "nominal",
              "sort": "y",
              "title": "Country",
              "axis": {
                "labelAngle": -20
              }
            },
            "y": {
              "field": "deaths",
              "scale": {
                "type": "linear"
              }
            },
            "color": {
              "field": "group",
              "type": "nominal",
              "scale": {
                "domain": [
                  "Civilians",
                  "Non-civilians"
                ],
                "range": ["#1f77b4", "#ff7f0e"]
              }
            }
          }
        },
        {
          "data": {
            "url": "data/GEDEvent_v22_1.csv"
          },
          "height": 200,
          "width": 710,
          "transform": [
            {
              "filter": "datum.best > 0"
            },
            {
              "filter": {
                "param": "event_filter"
              }
            },
            {
              "aggregate": [
                {
                  "op": "sum",
                  "field": "deaths_a",
                  "as": "deaths_a_total"
                },
                {
                  "op": "sum",
                  "field": "deaths_b",
                  "as": "deaths_b_total"
                },
                {
                  "op": "sum",
                  "field": "deaths_civilians",
                  "as": "Civilians"
                },
                {
                  "op": "sum",
                  "field": "best",
                  "as": "deaths_total"
                }
              ],
              "groupby": ["conflict_new_id"]
            },
            {
              "calculate": "datum.deaths_a_total + datum.deaths_b_total",
              "as": "Non-civilians"
            },
            {
              "window": [{"op": "rank", "as": "ranking"}],
              "sort": [
                {
                  "field": "deaths_total",
                  "order": "descending"
                }
              ]
            },
            {
              "filter": "datum.ranking <= 10"
            },
            {
              "lookup": "conflict_new_id",
              "from": {
                "data": {
                  "url": "./data/conflict_id.csv",
                  "format": {
                    "type": "tsv"
                  }
                },
                "key": "conflict_id",
                "fields": ["conflict_name"]
              }
            },
            {
              "fold": [
                "Non-civilians",
                "Civilians"
              ],
              "as": ["group", "deaths"]
            }
          ],
          "mark": {
            "type": "bar"
          },
          "encoding": {
            "x": {
              "field": "conflict_name",
              "type": "nominal",
              "sort": "y",
              "title": "Conflict Name",
              "axis": {
                "labelAngle": -20
              }
            },
            "y": {
              "field": "deaths",
              "scale": {
                "type": "linear"
              },
              "title": "Total Deaths"
            },
            "color": {
              "field": "group",
              "title": "Type of death",
              "type": "nominal",
              "scale": {
                "domain": [
                  "Non-civilians",
                  "Civilians"
                ],
                "range": ["#1f77b4", "#ff7f0e"]
              },
              "legend": {
                "orient": "top-left"
              }
            }
          }
        }
      ]
    }
  ],
  "resolve": {"scale": {"color": "independent"}},
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}